<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP_SQL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP_SQL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="..\_Layout.cshtml.css" asp-append-version="true" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="d-flex flex-column min-vh-100"> <!-- Aplicar Flexbox para el cuerpo -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a class="navbar-brand" href='@Url.Action("Index")'>
                <img src="../Fotos/logoJO.jfif" alt="Logo JJOO" />
            </a>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" href='@Url.Action("Historia")'>Historia</a></li>
                <li class="nav-item"><a class="nav-link" href='@Url.Action("Deportes")'>Deportes</a></li>
                <li class="nav-item"><a class="nav-link" href='@Url.Action("Paises")'>Países</a></li>
                <li class="nav-item"><a class="nav-link" href='@Url.Action("AgregarDeportista")'>Agregar Deportista</a></li>
                <li class="nav-item"><a class="nav-link" href='@Url.Action("Creditos")'>Créditos</a></li>
            </ul>
        </nav>
    </header>
    <div class="container flex-grow-1"> <!-- Permitir que el contenido principal crezca -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2024 - TP_SQL - Ian Segade - Lucas D'Agostino - Tomas Cabral - Leticia Passer
        </div>
    </footer>
</body>
</html>
