<div class="conte">
  <div class="row">

    @foreach (Pais pais in @ViewBag.ListaPaises)
    {
      <div class="card" style="width: 18rem;">
        <img src="@pais.Bandera" class="card-img-top" alt="Bandera Pais">
        <div class="card-body">
          <h5 class="card-title">@pais.Nombre</h5>
          <p class="card-text">El pais se fundo en @pais.FechaFundacion.ToString("dd MMMM yyyy")</p>
          <a href='@Url.Action("VerDetallePais", "Home", new {idPais = pais.IdPais})' class="btn btn-primary">Ver Detalle Pais</a>
        </div>
      </div>
    }
  </div>
</div>
<footer>

  <div class="footer-links">
    <div class="oli1">
      <a href='@Url.Action("Historia")'>Historia</a>
      <a href='@Url.Action("Deportes")'>Deportes</a>
      <a href='@Url.Action("Paises")'>Países</a>
    </div>
    <div class="oli2">
      <a href='@Url.Action("AgregarDeportista")'>Agregar Deportista</a>
      <a href='@Url.Action("AgregarPais")'>Agregar País</a>
      <a href='@Url.Action("AgregarDeporte")'>Agregar Deporte</a>
    </div>
    <div class="oli3">
      <a href='@Url.Action("Creditos")'>Créditos</a>
    </div>
  </div>
  <img class="footi" src="../Fotos/jooparis.png">
  <div class="FooterText">
