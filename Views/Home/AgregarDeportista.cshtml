

<form action='@Url.Action("GuardarDeportista")' method="POST">
    <div class="input-group">
        <span class="input-group-text">Nombre</span>
        <input type="text" name="Nombre" aria-label="Nombre" class="form-control">
        <span class="input-group-text">Apellido</span>
        <input type="text" name="Apellido" aria-label="Apellido" class="form-control">
    </div>

    <div class="container mt-5">
        <div class="form-group">
            <label for="datepicker">Fecha de Nacimiento:</label>
            <input type="date" name="FechaNacimiento" class="form-control" id="datepicker">
        </div>
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Link Foto</label>
        <input type="text" name="Foto" class="form-control" id="exampleInputEmail1">
    </div>

    <p>ID Deporte: </p>
    <select name="IdDeporte" class="form-select" aria-label="Default select example">
        <option value="">Elija el Deporte del Atleta</option>
        <option value="1">Gimnasia Artistica</option>
        <option value="2">Atletismo</option>
        <option value="3">Arqueria</option>
    </select>
    <p> ID Pais: </p>
    <select name="IdPais" class="form-select" aria-label="Default select example">
        <option value="">Elija el Pais del Atleta</option>
        <option value="1">EEUU</option>
        <option value="2">Argentina</option>
        <option value="3">Suecia</option>
        <option value="4">China</option>
    </select>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
